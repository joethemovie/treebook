<div class="page-header">
  <h1>All of the Statuses</h1> <%= link_to "New Status", new_status_path , :class => "btn btn-success bodyButton" %>
</div>


<% @statuses.each do |status| %>
<div class="status">
    <div class="userName">
      <strong><%= status.name %></strong>
    </div>
    <p>
      <%= status.content %>
      <div class="meta">
        <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
        <span class="admin">
           | <%= link_to "Edit", edit_status_path(status) %> |
          <%= link_to "Delete", status, method: :delete, data: {confirm: "You sure you want to be doin' that?"} %>
        </span>
      </div>
    </p>
</div>
<% end %>
